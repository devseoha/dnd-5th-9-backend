{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "target": "es2017",
        "lib": ["es2015"],
        "allowJs": true,
        "strict": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "skipLibCheck": true,
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
        "@/*": ["src/*"],
        },
    },
    "include": ["src/**/*"]
}
